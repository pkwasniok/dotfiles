[Unit]
Description=Concourse
After=docker.service
Requires=docker.service

[Service]
User=patryk
Group=patryk
ExecStart=/usr/bin/docker compose -f /home/patryk/.config/concourse/docker-compose.yaml up
ExecStop=/usr/bin/docker compose -f /home/patryk/.config/concourse/docker-compose.yaml down

[Install]
WantedBy=multi-user.target

